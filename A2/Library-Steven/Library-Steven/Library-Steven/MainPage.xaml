<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Library_Steven.MainPage"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             ios:Page.UseSafeArea="true"
             Title="Login">

    <StackLayout Spacing="10" Margin="20, 0, 20, 0" VerticalOptions="Center">
        <Label Text="Login" FontSize="Title" Margin="0, 20, 0, 40" HorizontalTextAlignment="Center"/>
        <Entry x:Name="username" Placeholder="Enter username" />
        <Entry x:Name="password" Placeholder="Enter password" IsPassword="True"/>
        <Button Text="Login" Clicked="LoginBtn_Clicked" BackgroundColor="#b9f3fa"/>
    </StackLayout>

</ContentPage>
